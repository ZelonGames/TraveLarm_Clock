<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:theme="@style/SettingsTheme">

    <EditTextPreference
        android:key="alarmName"
        android:title="Alarm Name"
        android:dialogTitle="Alarm Name"
        android:textColor="#fff"/>

    <zelongames.travelarm_clock.CustomPreferences.DistancePickerPreference
        android:key="distancePicker"
        android:title="Distance" />

    <RingtonePreference
        android:key="alarm"
        android:title="Ringtone"
        android:summary="tone"
        android:ringtoneType="alarm"/>

    <SwitchPreference
        android:defaultValue="true"
        android:key="vibrate"
        android:title="Vibrate" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="enabled"
        android:title="Enabled" />

    <zelongames.travelarm_clock.CustomPreferences.SeekBarPreference
        android:key="volume"
        android:title="Volume"/>

</PreferenceScreen>
